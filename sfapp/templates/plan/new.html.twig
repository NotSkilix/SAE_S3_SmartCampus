{% extends 'base.html.twig' %}

{% block title %}Ajouter une association{% endblock %}

{% block content %}
    <link rel="stylesheet" href="{{ asset('style/ajoutPlan.css') }}">
{% endblock %}

{% block header %}
    <div class="header-titre">
        <p id="header-titre"><strong>AJOUTER UNE ASSOCIATION</strong></p><div id="bar"></div><p id="header-titre-batiment">batiment : <strong>{{ batiment_nom }}</strong></p>
