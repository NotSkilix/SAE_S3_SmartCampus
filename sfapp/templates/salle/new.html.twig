{% extends 'base.html.twig' %}

{% block title %}Ajouter une salle{% endblock %}

{% block content %}
    <link rel="stylesheet" href="{{ asset('style/ajoutSalle.css') }}">
{% endblock %}

{% block header %}
    <div class="header-titre">
        <p id="header-titre"><strong>AJOUTER UNE SALLE</strong></p><div id="bar"></div><p id="header-titre-batiment">BATIMENT : <strong>{{ batiment_nom }}</strong></p>
    </div>
{% endblock %}

{% block body %}
<div id="page-body">
    <div id="form-content">
        {{ form_start(form, {'attr': {'id': 'ajoutSalleForm'}}) }}
            <div class="form-part">
                <div class="form-part-title">
                    <p>Informations principales de la salle :</p>
                </div>
                {{ form_row(form.salle) }}
            </div>

            <div class="form-part">
                <div class="form-part-title">
                    <p>Caract√©ristiques de la salle :</p>
                    <p class="form-part-title-fac">(facultatif)</p>
                </div>
                {{ form_row(form.detailsSalle) }}
            </div>
        {{ form_end(form) }}
    </div>
    <div id="edit-button-container">
        <a href="{{ path('app_salle') }}" class="button-type1 button-cancel" id="delete-btn">
            ANNULER
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512">
                <path d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6
                    105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0
                    45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256
                    342.6 150.6z"/>
            </svg>
        </a>
        <button type="submit" form="ajoutSalleForm" class="button-type1 button-confirm" id="edit-btn">
            VALIDER
            <!-- check icon -->
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                <path d="M438.6 105.4c12.5 12.5 12.5 32.8 0 45.3l-256 256c-12.5 12.5-32.8 12.5-45.3
